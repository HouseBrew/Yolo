@import '../../stylus/settings.styl'

.vi-no-data
  display inline-block
  margin 0 auto
  color $light-grey
  line-height 1.2
  text-align center

  > .vi-icon
    margin-bottom 10px
    color $light-grey

  &__title
    font-size 24px
    font-weight bold

  &__content
    font-size 14px
    margin-top 10px

  &--small
    .vi-no-data__title
      font-size 14px

  .vi-no-data__content
    margin-top 4px
